<div class="container">
  <h3 class="my-5">Leave a review</h3>
  <div class="row my-5">
    <div class="col-6">
    <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :rating, input_html: { min: 0, max: 5 } %>
      <%= f.input :content %>
      <%= f.button :submit, class: "btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
      <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
  </h1>
</div>
